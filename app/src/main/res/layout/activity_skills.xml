<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_custom_imbue"
    android:paddingBottom="25dp"
    android:paddingTop="25dp"
    tools:context=".funcs.SkillsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:text="@string/skills_increase"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/layout_bash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="bashClick"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bash"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_bash"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/bash"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_blockade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="blockadeClick"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blockade"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_blockade"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/blockade"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_chop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="chopClick"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chop"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_chop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/chop"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_epiphany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="epiphanyClick"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Epiphany"
                android:textSize="22dp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_epiphany"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/epiphany"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_slash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="slashClick"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slash"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_slash"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/slash"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_precision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:onClick="precisionClick"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precision"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_precision"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/precision"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>