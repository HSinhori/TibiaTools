<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_custom_imbue"
    android:paddingBottom="25dp"
    android:paddingTop="25dp"
    tools:context=".funcs.DamageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:text="@string/elemental_damage"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/layout_electrify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:onClick="electrifyClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Electrify"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_electrify"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/electrify"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_frost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:onClick="frostClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frost"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_frost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/frost"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_reap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:onClick="reapClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reap"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_reap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/reap"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_scorch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:onClick="scorchClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scorch"
                android:textSize="22dp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_scorch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/scorch"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_venom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:onClick="venomClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Venom"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_venom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/venom"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>