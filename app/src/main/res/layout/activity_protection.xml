<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_custom_imbue"
    android:paddingBottom="25dp"
    android:paddingTop="25dp"
    tools:context=".funcs.ProtectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:text="@string/protection_damage"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/layout_cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:onClick="cloudClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cloud Electrify"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_cloud"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/electrify"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_demon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:onClick="demonClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demon Presence"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_demon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/holy"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_dragon_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:onClick="dragonClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dragon Hide"
                android:textSize="22dp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_dragon_hide"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/scorch"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_lich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:onClick="lichClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lich Shroud"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_lich"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/reap"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_quara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:onClick="quaraClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quara Scale"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_quara"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/frost"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_snake_skin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:onClick="snakeClick"
            android:gravity="center"
            android:background="@drawable/btn_custom_imbue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snake Skin"
                android:textSize="22sp"
                android:layout_weight="1.3"
                android:gravity="right"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_snake"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/venom"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>